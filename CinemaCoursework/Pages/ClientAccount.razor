@page "/client_account"
@using CinemaCoursework.Data
@using CinemaCoursework.Services
@inject PagesList pageList
@inject DataBase dataBase
@inject IJSRuntime JS
@inject NavigationManager navigation

<PageTitle>Client account</PageTitle>

<style type="text/css">
    .lblOne {
        text-decoration: underline;
        width: 100px;
        white-space: nowrap;
        font-weight: 700;
        font-size: 23px;
    }

    .lblTwo {
        font-size: 23px;
    }

    .field {
        width: 85%;
        background: #9F4FF9;
        border-radius: 20px;
        font-size: 20px;
    }

    .tableOne {
        display: inline-table;
        position: absolute;
        left: 30%;
        top: 25%;
    }

    .tableTwo {
        display: inline-table;
        position: absolute;
        left: 63%;
        top: 25%;
    }

    .button {
        position: absolute;
        right: 5%;
        height: 20%;
        width: 50%;
        background: #9F4FF9;
        border-radius: 15px;
        font-size: 23px;
    }
</style>

<div class="tableOne">
    <table>
        <tr>
            <td><label class="lblOne">ЛИЧНЫЕ ДАННЫЕ:</label></td>
        </tr>
        <tr>
            <td><label class="lblTwo">Фамилия:</label></td>
            <td><input class="field" style="color: @color" id="surname" type="text" value="@dataBase.CurrentUser?.Surname" disabled="@isDisable"></td>
        </tr>
        <tr><td><label></label></td></tr>
        <tr>
            <td><label class="lblTwo">Имя:</label></td>
            <td><input class="field" style="color: @color" id="name" type="text" value="@dataBase.CurrentUser?.Name" disabled="@isDisable"></td>
        </tr>
        <tr><td><label></label></td></tr>
        <tr>
            <td><label class="lblTwo">Отчество:</label></td>
            <td><input class="field" style="color: @color" id="patronymic" type="text" value="@dataBase.CurrentUser?.Patronymic" disabled="@isDisable"></td>
        </tr>
        <tr><td><label></label></td></tr>
        <tr>
            <td><label class="lblTwo">Номер телефона:</label></td>
            <td><input class="field" style="color: @color" id="phone_number" type="text" value="@dataBase.CurrentUser?.PhoneNumber" disabled="@isDisable"></td>
        </tr>
        <tr><td><label></label></td></tr>
        <tr>
            <td><label class="lblTwo">E-mail:</label></td>
            <td><input class="field" style="color: @color" id="mail" type="text" value="@dataBase.CurrentUser?.EMail" disabled="@isDisable"></td>
        </tr>
    </table>
</div>

<div class="tableTwo">
    <table>
        <tr>
            <td><label class="lblOne">ДАННЫЕ ДЛЯ ВХОДА:</label></td>
        </tr>
        <tr>
            <td><label class="lblTwo">Логин:</label></td>
            <td><input class="field" style="color: @color" id="login" type="text" value="@dataBase.CurrentUser?.Login" disabled="@isDisable"></td>
        </tr>
        <tr><td><label></label></td></tr>
        <tr>
            <td><label class="lblTwo">Пароль:</label></td>
            <td><input class="field" style="color: @color" id="password" type="password" value="@dataBase.CurrentUser?.Password" disabled="@isDisable"></td>
        </tr>
        <tr><td><label></label></td></tr>
        <tr><td><label></label></td></tr>
        <tr><td><label></label></td></tr>
        <tr><td><label></label></td></tr>
        <tr><td><label></label></td></tr>
        <tr><td><label></label></td></tr>
        <tr>
            <td><button class="button" @onclick="Red">Редактировать</button><br /></td>
        </tr>
    </table>
</div>

@code {
    private User user = new User();
    private bool isDisable = true;
    private string color = "";

    public void Red()
    {
        isDisable = false;
        color = "#cccccc";
    }

    protected override async Task OnInitializedAsync()
    {
        await GetPageName();
    }

    public async Task GetPageName()
    {
        pageList.PageName = "ClientAccount";
        await base.OnInitializedAsync();
    }
}