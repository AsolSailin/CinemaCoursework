@using CinemaCoursework.Data
@using CinemaCoursework.Services
@inject PagesList pageList
@inject DataBase dataBase
@inject IJSRuntime JS

<PageTitle>Adding hall</PageTitle>

<style type="text/css">
    .lbl {
        font-size: 23px;
    }

    .field {
        width: 85%;
        background: #9F4FF9;
        border-radius: 20px;
        font-size: 20px;
    }

    .button {
        position: absolute;
        left: 27%;
        height: 2em;
        width: 35%;
        background: #9F4FF9;
        border-radius: 15px;
        font-size: 23px;
    }

    .block {
        position: absolute;
        left: 48%;
        top: 40%;
    }
</style>

<div class="block">
    <table>
        <tr>
            <td><label class="lbl">Название зала:</label></td>
            <td><input class="field" id="hall_name" type="text" @bind-value="@hallName"></td>
        </tr>
        <tr><td><label></label></td></tr>
        <tr>
            <td><button class="button" @onclick="Create">Создать зал</button><br /></td>
        </tr>
    </table>
</div>

@code {
    private Hall hall = new Hall();
    private string hallName = "";

    public void Create()
    {
        if (hallName != "")
        {
            dataBase.CurrentHall = new Hall()
                {
                    Name = hallName
                };

            dataBase.AddHallToDataBase(dataBase.CurrentHall);
        }
        else
        {
            JS.InvokeVoidAsync("alert", "Данные введены неверно");
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await GetPageName();
    }

    public async Task GetPageName()
    {
        pageList.PageName = "AddingHall";
        await base.OnInitializedAsync();
    }
}
*@